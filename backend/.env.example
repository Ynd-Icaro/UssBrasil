# Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ussbrasil?schema=public"

# JWT
JWT_SECRET=ussbrasil-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=ussbrasil-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="USSBRASIL <noreply@ussbrasil.com>"

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
